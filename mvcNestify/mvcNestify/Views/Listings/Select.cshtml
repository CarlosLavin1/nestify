@model IEnumerable<mvcNestify.Models.ListingViewModel>

@{
    ViewData["Title"] = "Select";
}

<h1>Selected Customer: @Html.Label(Model.FirstOrDefault().CustomerFullName)</h1>

<div>
    @Html.ActionLink("Create New Listing", "Create", new { id = Model.FirstOrDefault().CustomerID}) |
    <a asp-controller="Customers" asp-action="Index">Back to Customers</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListingID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                Listing Agent
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.FirstOrDefault().ListingID != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ListingID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ListingAgent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ListingID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ListingID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ListingID">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <span class="text-success">@ViewBag.ListingSaved</span>
</table>
