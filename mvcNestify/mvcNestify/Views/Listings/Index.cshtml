@model IEnumerable<mvcNestify.Models.Listing>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Municipality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Footage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfBaths)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfRooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfStories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfHeating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Features)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialFeatures)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractSigned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Municipality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Footage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfBaths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfStories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfHeating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Features)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialFeatures)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractSigned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListingStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ListingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ListingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ListingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
