@model mvcNestify.Models.Showing

@{
    ViewData["Title"] = "Edit";
}

<style>
    .grid-container {
        border: 2px solid #ABDAFC;
        border-radius: 50px;
    }
</style>
<a asp-action="Index">Back to List</a>
<h1 class="form-h1">Edit Showing</h1>

<form asp-action="Edit" class="grid-container">
    <input hidden asp-for="CustomerID" />
    <input hidden asp-for="ListingID" />
    <div class="grid-item-1">
        <div class="form-group">
            <h4>Viewing Information:</h4>
            <label asp-for="CustomerID" class="control-label"></label>
            <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID">
                <option disabled selected>-- SELECT CUSTOMER --</option>
            </select>
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ListingID" class="control-label"></label>
            <select asp-for="ListingID" class="form-control" asp-items="ViewBag.ListingID">
                <option disabled selected>-- SELECT LISTING --</option>
            </select>
            <span asp-validation-for="ListingID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AgentID" class="control-label"></label>
            <select asp-for="AgentID" class="form-control" asp-items="ViewBag.AgentID">
                <option disabled selected>-- SELECT AGENT --</option>
            </select>
            <span asp-validation-for="AgentID" class="text-danger"></span>
        </div>
    </div>
    <div class="grid-item-2">
        <div class="form-group">
            <h4>Date & Time:</h4>
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartTime" class="control-label"></label>
            <input asp-for="StartTime" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndTime" class="control-label"></label>
            <input asp-for="EndTime" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
    </div>
    <div class="grid-item-3">
        <div class="form-group">
            <h4>Comments:</h4>
            <textarea asp-for="Comments" class="form-control"></textarea>
            <span asp-validation-for="Comments" class="text-danger"></span>
        </div>
    </div>

    <div class="grid-item-2">
        <input type="submit" value="Create" class="btn btn-lg" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
